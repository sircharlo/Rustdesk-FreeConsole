<!DOCTYPE html>
<html lang="<%= lang || 'en' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="BetterDesk Console - Remote Desktop Viewer">
    <meta name="robots" content="noindex, nofollow">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>BetterDesk Console</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- Google Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/remote.css">
</head>
<body class="viewer-body">
    <%- body %>
    
    <!-- Scripts -->
    <script>
        // Global config for viewer
        window.BetterDesk = {
            lang: '<%= lang || "en" %>',
            translations: <%- JSON.stringify(translations || {}) %>,
            csrfToken: '<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>',
            user: <%- JSON.stringify(user || null) %>,
            serverPubKey: '<%= typeof serverPubKey !== 'undefined' ? serverPubKey : '' %>'
        };
    </script>
    
    <!-- Translation helper -->
    <script src="/js/i18n-client.js?v=<%= Date.now() %>"></script>
    
    <!-- Vendor libraries for remote client -->
    <script src="/js/vendor/protobuf.min.js"></script>
    <script src="/js/vendor/nacl.min.js"></script>
    <script src="/js/vendor/nacl-util.min.js"></script>
    <script src="/js/vendor/jmuxer.min.js"></script>
    
    <!-- RDClient modules (order matters) -->
    <script src="/js/rdclient/connection.js?v=<%= Date.now() %>"></script>
    <script src="/js/rdclient/crypto.js?v=<%= Date.now() %>"></script>
    <script src="/js/rdclient/protocol.js?v=<%= Date.now() %>"></script>
    <script src="/js/rdclient/video.js?v=<%= Date.now() %>"></script>
    <script src="/js/rdclient/audio.js?v=<%= Date.now() %>"></script>
    <script src="/js/rdclient/renderer.js?v=<%= Date.now() %>"></script>
    <script src="/js/rdclient/input.js?v=<%= Date.now() %>"></script>
    <script src="/js/rdclient/client.js?v=<%= Date.now() %>"></script>
    
    <!-- Page-specific scripts -->
    <% if (typeof pageScripts !== 'undefined' && pageScripts) { %>
        <% (Array.isArray(pageScripts) ? pageScripts : [pageScripts]).forEach(script => { %>
    <script src="/js/<%= script %>.js?v=<%= Date.now() %>"></script>
        <% }); %>
    <% } %>
</body>
</html>
