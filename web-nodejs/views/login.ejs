<!DOCTYPE html>
<html lang="<%= lang || 'en' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= appName %> - Login">
    <meta name="robots" content="noindex, nofollow">
    <title><%= _('auth.login') %> - <%= appName %></title>
    
    <link rel="icon" type="image/svg+xml" href="/branding/favicon.svg">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo">
                    <% if (branding.logoType === 'svg' && branding.logoSvg) { %>
                    <span class="login-logo-svg"><%- branding.logoSvg %></span>
                    <% } else if (branding.logoType === 'image' && branding.logoUrl) { %>
                    <img src="<%= branding.logoUrl %>" alt="<%= appName %>" class="login-logo-img">
                    <% } else { %>
                    <span class="material-icons">dns</span>
                    <span class="login-logo-text"><%= appName %></span>
                    <% } %>
                </div>
                <h1 class="login-title"><%= _('auth.login_title') %></h1>
                <p class="login-subtitle"><%= _('auth.login_subtitle') %></p>
            </div>
            
            <!-- Error message -->
            <div class="login-error hidden" id="login-error">
                <span class="material-icons">error</span>
                <span id="error-message"></span>
            </div>
            
            <form class="login-form" id="login-form">
                <div class="form-group">
                    <label class="form-label" for="username">
                        <span class="material-icons" style="font-size: 16px;">person</span>
                        <%= _('auth.username') %>
                    </label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        class="form-input" 
                        placeholder="<%= _('auth.username_placeholder') %>"
                        autocomplete="username"
                        required
                        autofocus
                    >
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="password">
                        <span class="material-icons" style="font-size: 16px;">lock</span>
                        <%= _('auth.password') %>
                    </label>
                    <div class="password-wrapper">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-input" 
                            placeholder="<%= _('auth.password_placeholder') %>"
                            autocomplete="current-password"
                            required
                        >
                        <button type="button" class="password-toggle" id="password-toggle">
                            <span class="material-icons">visibility</span>
                        </button>
                    </div>
                </div>
                
                <div class="login-options">
                    <label class="remember-me">
                        <input type="checkbox" name="remember" id="remember">
                        <span><%= _('auth.remember_me') %></span>
                    </label>
                </div>
                
                <button type="submit" class="btn btn-primary login-btn" id="login-btn">
                    <span class="material-icons">login</span>
                    <%= _('auth.login') %>
                </button>
            </form>
            
            <!-- TOTP Verification Step (hidden by default) -->
            <form class="login-form hidden" id="totp-form">
                <div class="totp-header">
                    <span class="material-icons totp-icon">security</span>
                    <h2 class="totp-title"><%= _('auth.totp_title') %></h2>
                    <p class="totp-subtitle"><%= _('auth.totp_subtitle') %></p>
                </div>
                
                <div class="form-group" id="totp-code-group">
                    <label class="form-label" for="totp-code">
                        <span class="material-icons" style="font-size: 16px;">pin</span>
                        <%= _('auth.totp_code') %>
                    </label>
                    <input 
                        type="text" 
                        id="totp-code" 
                        name="totp-code" 
                        class="form-input totp-input" 
                        placeholder="000000"
                        autocomplete="one-time-code"
                        inputmode="numeric"
                        pattern="[0-9]{6}"
                        maxlength="6"
                        required
                    >
                </div>
                
                <button type="submit" class="btn btn-primary login-btn" id="totp-btn">
                    <span class="material-icons">verified_user</span>
                    <%= _('auth.totp_verify') %>
                </button>
                
                <div class="totp-recovery-link">
                    <a href="#" id="toggle-recovery"><%= _('auth.totp_use_recovery') %></a>
                </div>
                
                <!-- Recovery code input (hidden) -->
                <div class="form-group hidden" id="recovery-group">
                    <label class="form-label" for="recovery-code">
                        <span class="material-icons" style="font-size: 16px;">vpn_key</span>
                        <%= _('auth.totp_recovery_code') %>
                    </label>
                    <input 
                        type="text" 
                        id="recovery-code" 
                        name="recovery-code" 
                        class="form-input" 
                        placeholder="XXXX-XXXX"
                        autocomplete="off"
                        maxlength="9"
                    >
                </div>
                
                <div class="totp-back-link">
                    <a href="#" id="totp-back">
                        <span class="material-icons" style="font-size: 16px;">arrow_back</span>
                        <%= _('auth.totp_back_to_login') %>
                    </a>
                </div>
            </form>
            
            <div class="login-footer">
                <p><%= appName %> v<%= appVersion %></p>
            </div>
        </div>
    </div>
    
    <script>
        window.BetterDesk = {
            csrfToken: '<%= csrfToken || "" %>',
            lang: '<%= lang || "en" %>',
            translations: <%- JSON.stringify(translations || {}) %>,
            branding: <%- JSON.stringify(branding || {}) %>
        };
    </script>
    <script src="/js/utils.js"></script>
    <script src="/js/login.js"></script>
</body>
</html>
