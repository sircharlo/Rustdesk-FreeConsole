<!DOCTYPE html>
<html lang="<%= lang || 'en' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="BetterDesk Console - Login">
    <meta name="robots" content="noindex, nofollow">
    <title><%= _('auth.login') %> - BetterDesk Console</title>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo">
                    <span class="material-icons">dns</span>
                    <span class="login-logo-text">BetterDesk</span>
                </div>
                <h1 class="login-title"><%= _('auth.login_title') %></h1>
                <p class="login-subtitle"><%= _('auth.login_subtitle') %></p>
            </div>
            
            <!-- Error message -->
            <div class="login-error hidden" id="login-error">
                <span class="material-icons">error</span>
                <span id="error-message"></span>
            </div>
            
            <form class="login-form" id="login-form">
                <div class="form-group">
                    <label class="form-label" for="username">
                        <span class="material-icons" style="font-size: 16px;">person</span>
                        <%= _('auth.username') %>
                    </label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        class="form-input" 
                        placeholder="<%= _('auth.username_placeholder') %>"
                        autocomplete="username"
                        required
                        autofocus
                    >
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="password">
                        <span class="material-icons" style="font-size: 16px;">lock</span>
                        <%= _('auth.password') %>
                    </label>
                    <div class="password-wrapper">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-input" 
                            placeholder="<%= _('auth.password_placeholder') %>"
                            autocomplete="current-password"
                            required
                        >
                        <button type="button" class="password-toggle" id="password-toggle">
                            <span class="material-icons">visibility</span>
                        </button>
                    </div>
                </div>
                
                <div class="login-options">
                    <label class="remember-me">
                        <input type="checkbox" name="remember" id="remember">
                        <span><%= _('auth.remember_me') %></span>
                    </label>
                </div>
                
                <button type="submit" class="btn btn-primary login-btn" id="login-btn">
                    <span class="material-icons">login</span>
                    <%= _('auth.login') %>
                </button>
            </form>
            
            <div class="login-footer">
                <p>BetterDesk Console v2.0</p>
            </div>
        </div>
    </div>
    
    <script>
        window.BetterDesk = {
            lang: '<%= lang || "en" %>',
            translations: <%- JSON.stringify(translations || {}) %>
        };
    </script>
    <script src="/js/utils.js"></script>
    <script src="/js/login.js"></script>
</body>
</html>
